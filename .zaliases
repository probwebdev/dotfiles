# TPM aliases
alias tpmi="~/.tmux/plugins/tpm/bin/install_plugins"
alias tpmup="~/.tmux/plugins/tpm/bin/update_plugins all"
alias tpmclean="~/.tmux/plugins/tpm/bin/clean_plugins"

# Nvim aliases
alias plugi="nvim -es -u ~/.config/nvim/init.vim -i NONE -c 'PlugInstall' -c 'qa'"
alias plugup="nvim -es -u ~/.config/nvim/init.vim -i NONE -c 'PlugUpdate' -c 'qa'"

# Custom aliases
alias toolsup="echo $'Proto upgrade' ; proto upgrade ; echo $'\nZIM update' ; zimfw update ; echo $'\nNvim PlugUpdate' ; plugup ; echo $'\nTPM plugins update' ; tpmup"
